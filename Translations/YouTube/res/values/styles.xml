<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="Theme" parent="@android:style/Theme">
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listViewStyle">@style/Widget.ListView</item>
    </style>
    <style name="Toolbar" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dark_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Widget.ListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@null</item>
    </style>
    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="Widget.PagedGridView" parent="@android:style/Widget.GridView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingRight">11.0dip</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:layout_marginLeft">11.0dip</item>
        <item name="android:layout_marginTop">11.0dip</item>
        <item name="android:listSelector">@color/full_transparent</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
    </style>
</resources>