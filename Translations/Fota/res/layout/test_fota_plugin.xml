<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/hi_fota_plugin" />
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@id/checking_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/test_check_progress" />
        <Button android:id="@id/checking_timer_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/test_check_timer_progress" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@id/exit_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/click_me" />
    </LinearLayout>
</LinearLayout>